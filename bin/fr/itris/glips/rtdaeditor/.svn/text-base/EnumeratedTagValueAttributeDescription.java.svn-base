package fr.itris.glips.rtdaeditor;

/**
 * the class that is the representation of the attribute 
 * defining a value of an enumerated tag
 * @author ITRIS, Jordi SUC
 */
public class EnumeratedTagValueAttributeDescription {
    
    /**
     * the name of the attribute
     */
    private String name="";
    
    /**
     * the name of the element that contains the attribute
     */
    private String elementNodeName="";
    
    /**
     * whether this attribute belongs to a child element
     */
    private boolean isChildNodeAttribute=false;
    
    /**
     * the attribute defining the enumerated tag
     */
    private String enumeratedTagAttribute="";
    
    /**
     * the constructor of the class 
     * @param name the name of the attribute the name of the element that contains the attribute
     * @param elementNodeName the name of the element that contains the attribute
     * @param isChildNodeAttribute whether this attribute belongs to a child element
     * @param enumeratedTagAttribute the attribute defining the enumerated tag
     */
    public EnumeratedTagValueAttributeDescription(	String name, String elementNodeName, 
            boolean isChildNodeAttribute, String enumeratedTagAttribute){
        
        this.name=name;
        this.elementNodeName=elementNodeName;
        this.isChildNodeAttribute=isChildNodeAttribute;
        this.enumeratedTagAttribute=enumeratedTagAttribute;
    }
    
    /**
     * @return Returns the elementNodeName.
     */
    public String getElementNodeName() {
        return elementNodeName;
    }
    
    /**
     * @return Returns the enumeratedTagAttribute.
     */
    public String getEnumeratedTagAttribute() {
        return enumeratedTagAttribute;
    }
    
    /**
     * @return Returns the isChildNodeAttribute.
     */
    public boolean isChildNodeAttribute() {
        return isChildNodeAttribute;
    }
    
    /**
     * @return Returns the name.
     */
    public String getName() {
        return name;
    }
}

