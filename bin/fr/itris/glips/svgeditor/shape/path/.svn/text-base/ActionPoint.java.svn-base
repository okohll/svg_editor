package fr.itris.glips.svgeditor.shape.path;

import java.awt.geom.*;

/**
 * the action point for the path action
 * @author Jordi SUC
 */
public class ActionPoint {

	/**
	 * the action type associated to the point
	 */
	private int actionType;
	
	/**
	 * the action point
	 */
	private Point2D actionPoint;

	/**
	 * the constructor of the class
	 * @param actionType the action type
	 * @param actionPoint the action point
	 */
	public ActionPoint(int actionType, Point2D actionPoint){
		
		this.actionType=actionType;
		this.actionPoint=actionPoint;
	}

	/**
	 * @return the action point
	 */
	public Point2D getActionPoint() {
		return actionPoint;
	}

	/**
	 * @return the action type
	 */
	public int getActionType() {
		return actionType;
	}
}
